{
	"passes" : ["MAIN"],
	"attributes" : ["in_position", "in_color"]
}

//BEGIN

#ifdef VERTEX_SHADER

in vec3 in_position;
in vec3 in_color;

out vec3 color;

uniform mat4 view_matrix;
uniform mat4 projection_matrix;

void main( void )
{
	color = in_color;
	vec4 position = vec4(in_position, 1);
	gl_Position = projection_matrix * view_matrix * position; 
}

//~VS
#endif


#ifdef FRAGMENT_SHADER
in vec3 			color;
out vec4			out_color;

void main( void )
{
	out_color = vec4(color, 1);
}
#endif
